<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_gravity="center"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/classstroke"
        android:orientation="vertical"
        android:gravity = 'center_horizontal'
        android:padding="26dp">
        <TextView
            android:id="@+id/reminder_date"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/edit_courseno"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"
            android:text="Select a date"
            android:textSize="18sp"
            android:fontFamily="@font/exoregular"
            />

        <TextView
            android:id="@+id/reminder_time"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/edit_courseno"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"
            android:text="Select a time"
            android:textSize="18sp"
            android:fontFamily="@font/exoregular" />

        <EditText
            android:id="@+id/reminder_description"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/edit_courseno"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"
            android:fontFamily="@font/exoregular"
            android:hint="Add description" />


        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_courseno"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbutton"
            android:gravity="center"
            android:padding="10dp"
            android:elevation="0dp"
            android:id= "@+id/add_reminder_button"
            android:text="Add" />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_courseno"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-48dp"
            android:background="@drawable/roundedbutton"
            android:id= "@+id/cancel_reminder_button"

            android:gravity="center"
            android:padding="10dp"
            android:text="cancel" />
    </LinearLayout>

   <!-- <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_calendartop"
        android:layout_marginStart="-230dp"
        />-->

</RelativeLayout>

