<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_gravity="center"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/classstroke"
        android:orientation="vertical"
        android:gravity = 'center_horizontal'
        android:padding="26dp">
        <TextView
            android:id="@+id/thirty_backup"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"
            android:text="Select a time"
            android:textSize="18sp"
            android:fontFamily="@font/exoregular"
            />

        <EditText
            android:id="@+id/final_marks"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"
            android:fontFamily="@font/exoregular"
            android:hint="Final Marks" />



        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/final_marks"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbutton"
            android:gravity="center"
            android:padding="10dp"
            android:elevation="0dp"
            android:id= "@+id/cgpa_calculate_btn"
            android:text="Calculate cgpa" />

    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_grade_icon"
        android:layout_marginStart="-230dp"
        />

</RelativeLayout>

