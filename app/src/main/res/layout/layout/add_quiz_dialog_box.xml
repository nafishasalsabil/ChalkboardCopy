<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/classstroke"
        android:orientation="vertical"
        android:gravity = 'center_horizontal'
        android:padding="26dp">

        <EditText
            android:id="@+id/quiz_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"

            android:hint="Quiz name" />

        <TextView
            android:id="@+id/quiz_date_textview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/quiz_name_edittext"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"
            android:textSize="18sp"
            android:clickable="true"
            android:hint="Date" />

        <EditText
            android:id="@+id/total_marks"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/quiz_name_edittext"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="number"
            android:textSize="18sp"
            android:clickable="true"
            android:hint="Total marks" />



        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/quiz_date_textview"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbutton"
            android:gravity="center"
            android:padding="10dp"
            android:id= "@+id/done_quiz_add"
            android:text="Done" />


    </LinearLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_grade_icon"

        />

</RelativeLayout>

