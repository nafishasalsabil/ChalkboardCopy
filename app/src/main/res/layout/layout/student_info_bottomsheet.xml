<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="340dp"
    android:orientation="vertical"
    android:layout_marginStart="5dp"
    android:background="@drawable/classstroke"
   >

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_student_hat"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="student name"
        android:padding="5dp"
        android:fontFamily="@font/exoregular"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:orientation="horizontal"
      >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Present days : "
            android:padding="5dp"
            android:fontFamily="@font/exoregular"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/days"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#9BCFC5"
            android:textColor="@android:color/white"
            android:text="days"
            android:textSize="15sp"
            android:fontFamily="@font/exoregular"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Grade for this course : "
            android:padding="5dp"
            android:fontFamily="@font/exoregular"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/grades"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#9BCFC5"
            android:text="grade"
            android:fontFamily="@font/exoregular"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="Cgpa for this course : "
            android:fontFamily="@font/exoregular"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            />
        <TextView
            android:id="@+id/cg_info"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:backgroundTint="#9BCFC5"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:fontFamily="@font/exoregular"
            android:text="4.00"
            />

    </LinearLayout>
    </LinearLayout>
