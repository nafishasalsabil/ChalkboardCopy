<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPostActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/classstroke"
        android:padding="10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/PostTittleET"
            android:background="@drawable/roundededittext_post"
            android:padding="10dp"
            android:hint="Enter Title"
            android:singleLine="true"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <EditText
            android:id="@+id/PostDescriptionET"

            android:padding="10dp"
            android:hint="Enter Description"
            android:inputType="textCapSentences|textMultiLine"
            android:minHeight="120dp"
            android:gravity="start"
            android:background="@drawable/roundededittext_post"
            android:layout_marginTop="10dp"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <!--Button to publish into firebase-->
        <Button
            android:id="@+id/Post_UploadBtn"
            style="@style/Widget.AppCompat.Button.Colored"
            android:text="Post"
            android:background="@drawable/roundedbutton"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>