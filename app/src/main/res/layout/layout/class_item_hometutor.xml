<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_margin = "6dp"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="6dp"
    android:id="@+id/classcard"
    android:backgroundTint="#C8E1CC"
    android:layout_height="150dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#B8D8BE"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="126dp"
            android:layout_centerVertical="true"
            android:layout_margin="6dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/coursetitle_hometutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exoregular"
                android:text="Course title"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exoregular"
                    android:padding="0dp"
                    android:text="Class : "
                    android:textColor="#878787"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/classname_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/exoregular"
                    android:padding="6dp"
                    android:text="Class Name"
                    android:textColor="#878787"
                    android:textSize="15sp" />


            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </RelativeLayout>

            <ImageView
                android:id = "@+id/editclass_hometutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="-30dp"
                android:clickable = "true"
                android:background="@drawable/ic_edit" />


        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>