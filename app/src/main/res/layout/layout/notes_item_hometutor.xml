<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardUseCompatPadding="true"
        android:backgroundTint="#434343"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notes_title_ht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note Title"
                    android:padding="5dp"
                    android:background="#97C3C3"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/exoregular"/>
                <TextView
                    android:id="@+id/notes_date_ht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Note Date"
                    android:padding="5dp"
                    android:background="#464646"
                    android:textSize="14sp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/exoregular"/>


                <TextView
                    android:id="@+id/notes_subtitle_ht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="subtitle"
                    android:layout_below="@+id/notes_title"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:background="#333333"
                    android:fontFamily="@font/exoregular"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/url_tv_ht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="url"
                    android:layout_below="@+id/notes_subtitle"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:fontFamily="@font/exoregular"/>

                <TextView
                    android:id="@+id/mynotes_ht"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="notes"
                    android:layout_below="@+id/notes_subtitle"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:fontFamily="@font/exoregular"/>

            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>