<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"

    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"

        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userPictureNotice"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/profile"
            android:scaleType="centerCrop"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
            
            <TextView
                android:id="@+id/userNameNotice"
                android:text="Name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/exoregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                >

            </TextView>
            <TextView
                android:id="@+id/postTimeNotice"
                android:text="33 min"
                android:layout_marginStart="5dp"

                android:fontFamily="@font/exoregular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </TextView>
        </LinearLayout>

            <ImageButton
                android:id="@+id/morebtnNotice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:src="@drawable/ic_add_black_2" />
    </LinearLayout>
    <TextView
        android:id="@+id/postTitleShowing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/exoregular"
        android:text="Title"/>

    <TextView
        android:id="@+id/postDescriptionShowing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="10dp"
        android:fontFamily="@font/exoregular"
        android:text="The Description of the post"/>

    <TextView
        android:id="@+id/postLikes"
        android:text="233 Likes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:fontFamily="@font/exoregular"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/classstroke"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <Button
            android:id="@+id/likeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="UpVote"
            android:backgroundTint="#9BCFC5"
            android:drawableLeft="@drawable/ic_like"
            android:drawableTint="#323232"
            android:fontFamily="@font/exoregular"
            />

        <Button
            android:id="@+id/msgBtn_ht"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Contact"
            android:fontFamily="@font/exoregular"
            android:drawableLeft="@drawable/ic_contact"
            android:backgroundTint="#9BCFC5"
            />


    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>