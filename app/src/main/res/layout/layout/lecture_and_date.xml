<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:layout_gravity="center"
    tools:context=".Attendance_activity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/classstroke"
        android:orientation="vertical"
        android:gravity = 'center_horizontal'
        android:padding="26dp">

        <EditText
            android:id="@+id/lecture_edittext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"

            android:hint="Lecture" />

        <TextView
            android:id="@+id/date_textview"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/edit_courseno"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"
            android:textSize="18sp"
            android:clickable="true"
            android:hint="Date" />



        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_courseno"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbutton"
            android:gravity="center"
            android:padding="10dp"
            android:id= "@+id/done_lecture"
            android:text="Done" />


    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_calendar_3"

        />

</RelativeLayout>

