<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        card_view:cardCornerRadius="18dp"
        card_view:cardUseCompatPadding="true"
        >

      <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/time_reminder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:drawableEnd="@drawable/ic_notifications_black_24dp"
                    android:padding="5dp"
                    android:background="#97C3C3"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/exoregular"/>

          <TextView
              android:id="@+id/description_reminder"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@+id/notes_title"
              android:background="#333333"
              android:fontFamily="@font/exoregular"
              android:padding="10dp"
              android:text="reminder descrpition"
              android:textColor="@android:color/white"
              android:textSize="15sp" />

          <TextView
                    android:id="@+id/url_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="url"
                    android:layout_below="@+id/notes_subtitle"
                    android:textColor="@android:color/white"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:fontFamily="@font/exoregular"/>


            </LinearLayout>



    </androidx.cardview.widget.CardView>


