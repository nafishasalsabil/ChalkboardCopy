<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsideClassActivity"
    android:id="@+id/inside_class_dlayout"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <include
        android:id="@+id/inside_class_toolbar"
        layout="@layout/toolbar" />


    <androidx.cardview.widget.CardView
        android:id="@+id/attendance_cardview"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg11">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_marginTop="88dp"
                android:background="#ffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:fontFamily="@font/moonbold"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:text="Attendance"
                    android:textColor="@android:color/black" />


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_attendance" />


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/materials_cardview"
        android:layout_height="175dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg9"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_marginTop="87dp"
                android:background="#ffffff"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  Materials"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/moonbold"/>


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_materials" />


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/results_cardview"
        android:layout_height="175dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg13"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_marginTop="88dp"
                android:background="#ffffff"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Results"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="135dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/moonbold"/>


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_results" />


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/studentinfo_cardview"
        android:layout_height="175dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg8"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="87dp"
                android:layout_marginTop="88dp"
                android:background="#ffffff"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student info"
                    android:padding="10dp"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="120dp"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/moonbold"/>


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:layout_width="73dp"
            android:layout_height="77dp"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_studentinfo" />

    </androidx.cardview.widget.CardView>

    </LinearLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:headerLayout="@layout/header"
        app:menu="@menu/menu"
        android:id="@+id/navigationView">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>