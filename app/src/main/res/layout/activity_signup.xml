<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9BCFC5"
    tools:context=".SignupActivity">



        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="146dp"
            android:layout_marginTop="106dp"
            android:background="@drawable/signin" />


    <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="42dp"
            android:layout_marginTop="430dp"
            android:background="@drawable/ic_confirmation" />

        <TextView
            android:id="@+id/passwordtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="87dp"
            android:layout_marginTop="340dp"
            android:fontFamily="@font/exoregular"
            android:text="password"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/confirmpasswordtextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="85dp"
            android:layout_marginTop="405dp"
            android:fontFamily="@font/exoregular"
            android:text="confirm password"
            android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/emailtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="271dp"
        android:fontFamily="@font/exoregular"
        android:text="email"
        android:textColor="@android:color/white" />


    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="87dp"
        android:layout_marginTop="203dp"
        android:fontFamily="@font/exoregular"
        android:text="username"
        android:textColor="@android:color/white" />

    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="296dp"
        android:background="@drawable/roundededittext"
        android:cursorVisible="true"
        android:fontFamily="@font/exoregular"
        android:hint="         louis.hoffman@gmail.com"
        android:inputType="textEmailAddress"
        android:gravity="center"
        android:textColorHint="#A9E5D9"
        android:textCursorDrawable="@android:color/black" />

    <EditText
        android:id="@+id/usernameedittext"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="228dp"
        android:background="@drawable/roundededittext"
        android:cursorVisible="true"
        android:fontFamily="@font/exoregular"
        android:hint="tokyo123"
        android:inputType="text"
        android:gravity="center"
        android:textColorHint="#A9E5D9"
        android:textCursorDrawable="@android:color/black" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="411dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="373dp"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/black"
        app:boxStrokeColor="@android:color/black"
        app:counterTextAppearance="@android:color/black"
        app:passwordToggleDrawable="@drawable/eye"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@android:color/white">

        <EditText

            android:id="@+id/passwordedittext"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="333dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:ems="10"
            android:gravity="center"
            android:fontFamily="@font/exoregular"
            android:inputType="textPassword"
            android:textColorHint="@color/colorPrimary"
            android:textCursorDrawable="@android:color/black" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="398dp"
        android:layout_height="83dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="283dp"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/black"
        app:boxStrokeColor="@android:color/black"
        app:counterTextAppearance="@android:color/black"
        app:passwordToggleDrawable="@drawable/eye"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@android:color/white">

        <EditText
            android:id="@+id/confirmpassedittext"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="65dp"
            android:layout_marginTop="395dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:fontFamily="@font/exoregular"
            android:inputType="textPassword"
            android:gravity="center"
            android:textCursorDrawable="@android:color/black" />


    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/signup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="519dp"
        android:background="@drawable/roundedbutton"
        android:fontFamily="@font/exoregular"
        android:textColor="@android:color/white"
        android:text="SIGN UP"
        android:textSize="17dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="305dp"
        android:background="@drawable/ic_mail_outline_black_24dp" />

    <ImageView
        android:id="@+id/use"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="237dp"
        android:background="@drawable/ic_person_outline_black_24dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="365dp"
        android:background="@drawable/ic_lock_outline_black_24dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="37dp"
        android:clickable="true"
        android:fontFamily="@font/exoregular"
        android:onClick="signin"
        android:text="Already signed up? Sign in."
        android:textColor="@android:color/white" />
    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="34dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="143dp"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone" />


</RelativeLayout>