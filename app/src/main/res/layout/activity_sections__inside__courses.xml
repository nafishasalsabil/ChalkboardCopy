<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools ="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:id="@+id/hellohi"


    >

    <!--  <include
          layout="@layout/toolbar"
          android:id="@+id/classes_toolbar"
          />
    -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        />

    <androidx.recyclerview.widget.RecyclerView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/section_recyclerview"
        android:layout_below="@id/toolbar_section"
    />

    <TextView
        android:id = "@+id/ash1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="307dp"
        android:fontFamily = "@font/moonbold"
        android:textColor = "#000000"
        android:textStyle = "bold"
        android:text="ADD SECTIONS HERE!"
        android:textSize="20sp" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_section_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="18dp"
        android:layout_marginBottom="53dp"
        android:backgroundTint="#3c1414"
        android:padding="10dp"
        android:src="@drawable/ic_add_black_24dp" />
</RelativeLayout>
