<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:layout_gravity="center"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/classstroke"
        android:orientation="vertical"
        android:gravity = 'center_horizontal'
        android:padding="26dp">

        <EditText
            android:id="@+id/edit_courseno"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"

            android:hint="CourseNo" />

        <EditText
            android:id="@+id/edit_coursetype"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/edit_courseno"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"

            android:hint="CourseType" />
        <EditText
            android:id="@+id/edit_credithours"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@id/edit_courseno"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"

            android:hint="Credit hours" />


        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_courseno"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbutton"
            android:gravity="center"
            android:padding="10dp"
            android:id= "@+id/updatebutton"
            android:text="update" />

        <Button
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_courseno"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-48dp"
            android:background="@drawable/roundedbutton"
            android:id= "@+id/cancelbutton"

            android:gravity="center"
            android:padding="10dp"
            android:text="cancel" />
    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_pencil"
        android:layout_marginStart="-230dp"
        />

</RelativeLayout>

