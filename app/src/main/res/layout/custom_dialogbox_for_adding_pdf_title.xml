<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:layout_gravity="center"
    tools:context=".Attendance_activity"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/classstroke"
        android:orientation="vertical"
        android:gravity = 'center_horizontal'
        android:padding="26dp">

       <TextView
           android:padding="10dp"

           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Please give a name to your pdf file!"
           android:textColor="@android:color/black"
           android:fontFamily="@font/exoregular"
           android:layout_gravity="center"
           android:layout_marginTop="10dp"
           android:gravity="center"
           />
        <EditText
            android:id="@+id/pdf_name_edittext"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundededittext"
            android:cursorVisible="true"
            android:gravity="center"

            android:hint="PDF name" />



        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-90dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/roundedbutton"
            android:gravity="center"
            android:padding="10dp"
            android:id= "@+id/cancel_pdf"

            android:text="Cancel " />

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="-48dp"
            android:background="@drawable/roundedbutton"
            android:id= "@+id/done_pdf"

            android:gravity="center"
            android:padding="10dp"
            android:text="done" />
    </LinearLayout>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_pdf_top"
        android:layout_marginStart="-230dp"
        />

</RelativeLayout>

